<div class="container" id="profile-page">
  <div class="row">
    <!-- left side -->
    <div class="col-md-3" id="profile-left">

      <div id="preview-image">
        <% if current_user.profile_image? %>
          <%= image_tag @user.profile_image, class: "profile-img img-responsive" %>
        <% end %>
      </div>

      <h3 class="username"><%= link_to @user.name, user_path(@user.id) %></h3>

      <div id="info-con">
        <div class="info-title">Store Name</div>
        <div class="info-desc"><%= @user.store_name %></div>

        <div class="info-title">Member Since</div>
        <div class="info-desc"><%= @user.created_at.strftime('%b %d, %Y') %></div>

        <div class="info-title">Rating</div>
        <div class="info-desc">@@@@@</div>
      </div>

    </div>

    <!-- right side -->
    <div class="col-md-9" id="profile-right">

      <div class="profile-row">
        <h2 class="profile-title">About Me</h2>
        <div><%= @user.about %></div>
      </div>

      <div class="profile-row">
        <h2 class="profile-title">Available Now!</h2>

        <div class="profile-btn">
          <a class="btn btn-success btn-sm" href="<%= new_menu_path %>"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Menu</a>
        </div>

        <div class="menu-con">

          <% @current_menus.each do |item| %>

            <div class="col-md-4 menu-item" id="item-<%= item.id %>">
              <div class="inner">
                <div class="menu-img">
                  <%= image_tag item.image1.optimised , class: "img-responsive"%>
                  <div class="menu-price"><%=number_to_currency(item.price, unit: "RM")%></div>
                </div>
                <div class="info-holder">
                  <div class="name-holder">
                    <h4><%= item.user.store_name %></h4>
                    <h5><%= item.user.name %></h5>
                  </div>
                  <div class="profile-img-holder">
                    <%= image_tag item.user.profile_image.thumb , class: "img-responsive"%>
                  </div>
                  <div class="title-holder">
                    <%= link_to item.name.truncate(20, omission: '...'), menu_path(item) %>
                  </div>
                  <div class="desc-holder">
                    <%= item.description.truncate(50, omission: '...') %>
                  </div>
                </div>
                <div class="button-holder">
                  <div class="btn-center">

                    <%= link_to edit_menu_path(item), class: "btn btn-info" do %>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <% end %>

                    <%= link_to menu_path(item), class: "btn btn-danger", method: :delete, remote: true, data: { confirm: "Delete '#{item.name}'?" } do %>
                      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <% end %>

                  </div>
                </div>
              </div>
            </div>

          <% end %>

        </div>
      </div>

      <% if @past_menus.length > 0 %>
        <div class="profile-row">
          <h2 class="profile-title">Past Menu</h2>
          <div class="menu-con">

            <% @past_menus.each do |item| %>

              <div class="col-md-4 menu-item" id="item-<%= item.id %>">
                <div class="inner">
                  <div class="menu-img">
                    <%= image_tag item.image1.optimised , class: "img-responsive"%>
                    <div class="menu-price"><%=number_to_currency(item.price, unit: "RM")%></div>
                  </div>
                  <div class="info-holder">
                    <div class="name-holder">
                      <h4><%= item.user.store_name %></h4>
                      <h5><%= item.user.name %></h5>
                    </div>
                    <div class="profile-img-holder">
                      <%= image_tag item.user.profile_image.thumb , class: "img-responsive"%>
                    </div>
                    <div class="title-holder">
                      <%= link_to item.name.truncate(20, omission: '...'), menu_path(item) %>
                    </div>
                    <div class="desc-holder">
                      <%= item.description.truncate(50, omission: '...') %>
                    </div>
                  </div>
                  <div class="button-holder">
                    <div class="btn-center">

                      <%= link_to menu_relist_path(item), class: "btn btn-success" do %>
                        <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
                      <% end %>

                      <%= link_to menu_path(item), class: "btn btn-danger", method: :delete, remote: true, data: { confirm: "Delete '#{item.name}'?" } do %>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                      <% end %>

                    </div>
                  </div>
                </div>
              </div>


            <% end %>


          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
