<!DOCTYPE html>
<html>
  <head>
    <title>Neighbourfood</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?v=3&key=AIzaSyDjoC5B_BeZt3Vr_FE-lomEzZKtU7AQ0Ic"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'> <!-- only if you need custom infoboxes --></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="content-wrapper">
      <%= render partial: 'common/header' %>

      <div class="container-fluid">
        <%= yield %>
      </div>

      <%= render partial: 'common/footer' %>

      <div id="flash-messages-container"><%= render partial: "common/flash_messages" %></div>

    </div>
  </body>
</html>
